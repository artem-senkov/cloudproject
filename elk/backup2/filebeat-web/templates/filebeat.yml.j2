filebeat.inputs:
- type: log
  enabled: true
  paths:
      -  /var/logs/apache2/access.log
  fields:
    type: nginx_access
  fields_under_root: true
  scan_frequency: 5s

- type: log
  enabled: true
  paths:
      - /var/logs/apache2/error.log
  fields:
    type: apache_error
  fields_under_root: true
  scan_frequency: 5s

output.logstash:
  hosts: ["{{ elkserver_ip  }}:5044"]

xpack.monitoring:
  enabled: true
  elasticsearch:
    hosts: ["{{ elkserver_ip  }}:9200"]

output.elasticsearch:
  hosts: ["{{ elkserver_ip  }}:9200"]
